public class NewClass {
    public static void main(String[] args) {
          
    Scanner imput = new Scanner (System.in);
    System.out.println ("ingrese codigo ") ;
    int code = imput.nextInt () ;
    
    System.out.println ("ingrese contraseña ") ;
    int contr = imput.nextInt ();
    while ((code != 0000) || (contr != 0000)){
        System.out.println("invalido vuelva a ingresar codigo");
        code = imput.nextInt();
        System.out.println("invalido vuelva a ingresar contraseña");
        contr = imput.nextInt ();
        
    }
    System.out.println ("valido ingreso correcto ") ;
   
    
   

    }
}

